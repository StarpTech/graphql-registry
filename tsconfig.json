{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/node_modules/**"]
}
