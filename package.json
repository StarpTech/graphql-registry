{
  "private": true,
  "main": "dist/worker.production.js",
  "scripts": {
    "dev": "wrangler dev",
    "build": "webpack",
    "deploy": "NODE_ENV=production wrangler publish",
    "test": "npm run unit",
    "unit": "tap --debug src/**/*.test.ts --node-arg=--require=./bin/register.js -Rspec",
    "watch": "npm run unit -- --watch",
    "cov": "npm run unit -- --cov --coverage-report=html",
    "format": "prettier --write '**/*.{js,css,json,md}'",
    "types": "tsc --noEmit"
  },
  "tap": {
    "check-coverage": false,
    "test-env": [
      "ESM_DISABLE_CACHE=1"
    ]
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.1",
    "@cloudflare/wrangler": "^1.16.0",
    "@types/tap": "^15.0.0",
    "esbuild": "^0.11.12",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tap": "^15.0.3",
    "ts-loader": "^9.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.34.0",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "@apollo/federation": "^0.23.0",
    "@graphql-inspector/core": "^2.5.0",
    "@sindresorhus/fnv1a": "^2.0.1",
    "fast-sort": "^3.0.2",
    "graphql": "^15.5.0",
    "superstruct": "^0.15.1",
    "ulid": "^2.3.0",
    "worktop": "latest"
  }
}
