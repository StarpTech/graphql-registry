{
  "private": true,
  "main": "dist/worker.production.js",
  "scripts": {
    "dev": "wrangler dev",
    "build": "webpack",
    "deploy": "NODE_ENV=production wrangler publish",
    "test": "npm run unit",
    "unit": "ava src/**/*.test.ts",
    "watch": "npm run unit -- --watch",
    "cov": "nyc --reporter=lcov --reporter=text-summary -- npm run unit",
    "format": "prettier --write '**/*.{js,ts,json,md}'",
    "types": "tsc --noEmit"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "./bin/register"
    ],
    "nodeArguments": []
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.1",
    "@cloudflare/wrangler": "^1.16.0",
    "ava": "^3.15.0",
    "esbuild": "^0.11.12",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.35.0",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "@apollo/federation": "^0.23.0",
    "@graphql-inspector/core": "^2.5.0",
    "@sindresorhus/fnv1a": "^2.0.1",
    "fast-sort": "^3.0.2",
    "graphql": "^15.5.0",
    "superstruct": "^0.15.1",
    "ulid": "^2.3.0",
    "worktop": "latest"
  }
}
